<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:background="@android:color/background_light">

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- KPI Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@android:color/holo_blue_light"
            android:layout_margin="8dp"
            android:padding="12dp">

            <TextView
                android:text="Pending"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvPendingCount"
                android:text="0"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@android:color/holo_green_light"
            android:layout_margin="8dp"
            android:padding="12dp">

            <TextView
                android:text="Upcoming"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvUpcomingCount"
                android:text="0"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Dashboard Tiles -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/tileNewReservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/tileCurrentReservations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Reservation"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/tileReservationHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Reservations"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/tileChargingStations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Charging Stations"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>

</LinearLayout>
